{
  "manifest_version": "2",
  "name": "URL Shortner",
  "description": "Shorten URLs with an easy click of a button!",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "main.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "URL Shortener"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "background",
    "activeTab"
  ]
}